<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signUp_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_blue"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10pt" />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="120pt"
            android:layout_height="28pt"
            android:backgroundTint="@color/light_grey"
            android:text="Facebook"
            android:textColor="@color/button_blue"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="15pt" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5pt" />

        <Button
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="28pt"
            android:backgroundTint="@color/light_grey"
            android:text="Google"
            android:textColor="@color/button_blue"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="15pt" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5pt" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#00FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="15pt"
            app:boxCornerRadiusBottomStart="15pt"
            app:boxCornerRadiusTopEnd="15pt"
            app:boxCornerRadiusTopStart="15pt"
            app:boxStrokeColor="@color/light_grey"
            app:boxStrokeWidth="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="22sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5pt" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#00FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="15pt"
            app:boxCornerRadiusBottomStart="15pt"
            app:boxCornerRadiusTopEnd="15pt"
            app:boxCornerRadiusTopStart="15pt"
            app:boxStrokeColor="@color/light_grey"
            app:boxStrokeWidth="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="22sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5pt" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="28pt"
            android:backgroundTint="@color/button_register"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="15pt" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>